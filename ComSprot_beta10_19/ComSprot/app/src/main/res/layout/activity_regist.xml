<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lwtwka.basal.comsprot.codechange">
    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:id="@+id/bikeback"
        android:background="@drawable/bike_mark"
        android:layout_below="@id/container_toolbar"/>
    <!--
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="19dp"
        android:textColor="@color/B"
        android:text="歡迎加入BASAL!一起來BIKE"
        android:layout_alignTop="@id/bikeback"/>
        -->
<RelativeLayout
    android:id="@+id/r1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="15dp"
    android:layout_below="@id/bikeback">
    <TextView
        android:id="@+id/nametitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/B"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:text="姓名" />
    <EditText
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="44.0dip"
        android:background="#60584398"
        android:hint=""
        android:maxLength="16"
        android:maxLines="1"
        android:paddingLeft="12.0dip"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="16.0sp"
        android:layout_toRightOf="@id/nametitle" />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/r2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/r1">
    <TextView
        android:id="@+id/accounttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:textColor="@color/B"
        android:text="帳號"/>
    <EditText
        android:id="@+id/account"
        android:layout_width="200dp"
        android:layout_height="44.0dip"
        android:layout_toRightOf="@id/accounttitle"
        android:background="#60584398"
        android:hint=""
        android:maxLength="16"
        android:maxLines="1"
        android:paddingLeft="12.0dip"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="16.0sp" />
</RelativeLayout>
    <RelativeLayout
        android:id="@+id/r3"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/r2"
        android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/codetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:textColor="@color/B"
        android:text="密碼"/>
    <EditText
        android:id="@+id/code"
        android:layout_width="200dp"
        android:layout_height="44.0dip"
        android:layout_toRightOf="@id/codetitle"
        android:background="#60584398"
        android:hint=""
        android:maxLength="16"
        android:maxLines="1"
        android:paddingLeft="12.0dip"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="16.0sp"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/r4"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/r3"
        android:layout_centerHorizontal="true">
    <TextView
        android:id="@+id/emailtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:textColor="@color/B"
        android:text="信箱"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="44.0dip"
        android:layout_toRightOf="@id/emailtitle"
        android:background="#60584398"
        android:hint=""
        android:maxLines="1"
        android:paddingLeft="12.0dip"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="16.0sp"/>
        </RelativeLayout>
    <!--de.hdodenhof.circleimageview.CircleImageView-->
    <ImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/pic"
        android:layout_marginTop="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@id/r4"
        android:layout_centerHorizontal="true"
        android:src="@drawable/photo"
        android:clickable="true"/>
    <TextView
        android:id="@+id/save"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="確定"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:background="@drawable/btn2"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_below="@id/pic"
        android:clickable="true"
        />
    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textSize="19dp"
        android:textColor="@color/colorPrimary"
        android:text=""
        android:layout_below="@id/save"/>

</RelativeLayout>
