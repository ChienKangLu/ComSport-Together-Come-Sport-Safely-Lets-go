<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imcenter"
        android:layout_width="50dp"
        android:layout_height="120dp"
        android:src="@drawable/ch_center_l"
        android:layout_centerInParent="true"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/imcenter"
        android:layout_marginLeft="9dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/date_pic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/ch_date"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012.7.13 16:20:32"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/date_pic"
                android:textSize="12dp"
                android:textColor="@color/B"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/title_pic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/ch_title"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新竹半日遊"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/title_pic"
                android:textSize="12dp"
                android:textColor="@color/B"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/startend_pic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/ch_startend"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/startend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="台北-新竹"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/startend_pic"
                android:textSize="12dp"
                android:textColor="@color/B"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/time_pic"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/ch_time"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:30:29"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/time_pic"
                android:textSize="12dp"
                android:textColor="@color/B"/>
        </RelativeLayout>
    </LinearLayout>
<ImageView
    android:id="@+id/back"
    android:layout_width="105dp"
    android:layout_height="105dp"
    android:layout_toLeftOf="@id/imcenter"
    android:src="@drawable/ch_black_r"
    android:layout_centerVertical="true"
    android:layout_marginLeft="9dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/im"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/perimg"
        android:layout_alignLeft="@id/back"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"/>









</RelativeLayout>
