<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp">
    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/roadname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/B"
        android:textStyle="bold"
        android:text="內湖-淡水"/>

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/roadname"
        android:textColor="@color/B"
        android:layout_alignLeft="@+id/roadname"
        android:text="2015/05/30,2015/06/10"/>
    <TextView
        android:id="@+id/dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25km"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/date"
        android:layout_alignLeft="@+id/date"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favorite"
        android:layout_alignBottom="@+id/dis"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:textColor="@color/detailtext"
        android:text="@string/detailgoto"
        />
</RelativeLayout>
