<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context="com.lwtwka.basal.comsprot.login"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textColor="#41CE62"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Comsprot"/>
    <EditText
        android:id="@+id/account"
        android:layout_width="200dp"
        android:layout_height="44.0dip"
        android:background="#60584398"
        android:hint="帳號"
        android:maxLength="16"
        android:maxLines="1"
        android:paddingLeft="12.0dip"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="16.0sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title"
        android:layout_marginTop="40dp"
        />
    <EditText
        android:id="@+id/code"
        android:layout_width="200dp"
        android:layout_height="44.0dip"
        android:background="#60584398"
        android:hint="密碼"
        android:maxLength="16"
        android:maxLines="1"
        android:paddingLeft="12.0dip"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="16.0sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/account"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/loginB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登入"
        android:background="@drawable/btn"
        android:layout_below="@+id/code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp" />
    <TextView
        android:id="@+id/forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginB"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="忘記密碼" />
    <View
        android:id="@+id/line2"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/divdot"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/forget"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="true"
        android:text="申請加入ComSprot" />

</RelativeLayout>
