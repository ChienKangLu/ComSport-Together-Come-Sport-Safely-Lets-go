<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="165dp"
    android:layout_height="165dp">
    <TextView
        android:id="@+id/id"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:paddingBottom="3dip"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="3dip"
        android:textColor="@color/B"
        android:textSize="15sp"
        android:visibility="gone"
        android:text="1">
    </TextView>
<ImageView
    android:id="@+id/im"
    android:layout_width="165dp"
    android:layout_height="165dp"
    android:background="@drawable/map_loading1"/>
    <TextView
        android:id="@+id/tv_tags_item"
        android:layout_width="165dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@color/checktext"
        android:text="2015/05/30">
    </TextView>

    <CheckBox
        android:id="@+id/tags_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tv_tags_item"
        android:layout_alignRight="@id/tv_tags_item"
        android:layout_alignTop="@id/tv_tags_item"
        android:checked="false"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />
    <ImageView
        android:id="@+id/imcheck"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:padding="60dp"
        android:src="@drawable/tick"
        android:background="@color/checktext2"
        android:visibility="invisible"
        />
</RelativeLayout>