<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lwtwka.basal.comsprot.codechange">
    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="19dp"
        android:textColor="@color/B"
        android:text="*請謹慎更改您的密碼*"
        android:layout_below="@id/container_toolbar"/>
    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="19dp"
        android:textColor="@color/colorPrimary"
        android:text="*輸入的密碼錯誤*"
        android:visibility="invisible"
        android:layout_below="@id/title"/>
    <TextView
        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/error"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/B"
        android:text="目前密碼"/>
    <TextView
        android:id="@+id/lastcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000000"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title1"
        android:textSize="20dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lastcode"
        android:layout_marginTop="10dp"
        android:textColor="@color/B"
        android:textSize="20dp"
        android:text="新密碼"/>
    <EditText
        android:id="@+id/newcode"
        android:layout_width="200dp"
        android:layout_height="44.0dip"
        android:layout_below="@id/title2"
        android:layout_centerHorizontal="true"
        android:background="#60584398"
        android:hint=""
        android:maxLength="16"
        android:maxLines="1"
        android:paddingLeft="12.0dip"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="16.0sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/newcode"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="@color/B"
        android:text="確認密碼"/>
    <EditText
        android:id="@+id/doublenewcode"
        android:layout_width="200dp"
        android:layout_height="44.0dip"
        android:layout_below="@id/title3"
        android:background="#60584398"
        android:hint=""
        android:maxLength="16"
        android:maxLines="1"
        android:paddingLeft="12.0dip"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:textSize="16.0sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/save"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="確定"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:background="@drawable/btn2"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:layout_below="@id/doublenewcode"
        android:clickable="true"
        />

</RelativeLayout>
