<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/out">
    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background2">
    <ImageView

        android:scaleType="fitCenter"
        android:id="@+id/roadpic"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true">
    </ImageView>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015 魅Liv騎跡"
        android:layout_below="@id/roadpic"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/B"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/bikeback"
        android:background="@drawable/bike_mark"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/title"/>
    <TextView
    android:id="@+id/nametitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="賽事名稱"
    android:textStyle="bold"
    android:layout_below="@+id/bikeback"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="50dp"
        android:textColor="@color/B"
    />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015 魅Liv騎跡"
        android:layout_toRightOf="@id/nametitle"
        android:layout_alignTop="@id/nametitle"
        />
    <TextView
        android:id="@+id/datetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="賽事日期"
        android:textStyle="bold"
        android:layout_below="@+id/nametitle"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/B"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2015年5月17日(星期日)"
        android:layout_toRightOf="@id/datetitle"
        android:layout_alignTop="@id/datetitle"
        />
    <TextView
        android:id="@+id/descripttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="路線資訊"
        android:textStyle="bold"
        android:layout_below="@+id/datetitle"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/B"
        />
    <TextView
        android:id="@+id/descript"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="至善國中->至善路->.......->至善國中"
        android:layout_toRightOf="@id/descripttitle"
        android:layout_alignTop="@id/descripttitle"
        android:ellipsize="end"
        android:maxLines="3"
        />
    <TextView
        android:id="@+id/distitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="總里程數"
        android:textStyle="bold"
        android:layout_below="@+id/descripttitle"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="50dp"
        android:textColor="@color/B"
        />
    <TextView
        android:id="@+id/dis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32km"
        android:layout_toRightOf="@id/distitle"
        android:layout_alignTop="@id/distitle"
        />
        <TextView
            android:id="@+id/asigntitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="報名日期"
            android:textStyle="bold"
            android:layout_below="@+id/distitle"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/B"
            />
        <TextView
            android:id="@+id/asign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="32km"
            android:layout_toRightOf="@id/asigntitle"
            android:layout_alignTop="@id/asigntitle"
            />
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/divdot"
        android:layout_below="@id/asign"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/url"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/url"
        android:layout_below="@id/line1"
        android:text="相關網站連結"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:paddingLeft="20dp"/>
    </RelativeLayout>

</RelativeLayout>

